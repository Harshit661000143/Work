#include "global.h"
int main()
{
// char *space=" ";
 char str[64];
 char result[64];
 str[20]='\0';
 result[20]='\0';
 int count,i=0;
 loop(x,20,1)
  {
    str[x]=alphanum[rand()%5]; 
  }
  loop(x,20,1)
  {
   if(str[x]==str[x+1])
   {
     count++;
   }
   else
   {
     if(!count)
     {
        result[i]=str[x];
        ++count; 
        result[i+1]=count;
        i=i+2;
     }
     count=0;
    }
   } 
   
 loop(x,20,1)
  cout<<result[x]<<"\t";   
 cout<<"\n";
 loop(x,20,1)
  cout<<result[x]<<"\t";   
        
  
  }
}
    
